@model SpiceMarket_Web.Presentation.Models.UserDashboardViewModel
@{
    ViewBag.Title = "Profilul meu";
}

<h2>Bun venit, @Model.Nume!</h2>

<div class="row">

    <div class="col-md-6">
        <div class="panel panel-default p-3">
            <div class="panel-heading"><strong>Informații cont</strong></div>
            <div class="panel-body">
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Rol:</strong> @Model.Rol</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="panel panel-default p-3">
            <div class="panel-heading"><strong>Statistici</strong></div>
            <div class="panel-body">
                <p><strong>Produse în wishlist:</strong> @Model.NrProduseWishlist</p>
                <p><strong>Comenzi plasate:</strong> @Model.NrComenzi</p>
                <p><strong>Ultima comandă:</strong> @(Model.DataUltimaComanda != null ? Model.DataUltimaComanda.Value.ToString("dd.MM.yyyy") : "Nicio comandă")</p>
            </div>
        </div>
    </div>

</div>
