@model List<SpiceMarket_Web.Domain.Models.Produs>

@{
    ViewBag.Title = "Wishlist-ul meu";
}

<h2>Produse salvate în wishlist</h2>

@if (Model.Count == 0)
{
    <p>Nu ai niciun produs în wishlist.</p>
}
else
{
    <div class="row">
        @foreach (var produs in Model)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img src="@Url.Content(produs.CaleImagine)"
                         alt="@produs.Nume"
                         class="card-img-top"
                         style="height: @(produs.ImageHeight)px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@produs.Nume</h5>
                        <p class="card-text"><strong>Preț:</strong> @produs.Pret MDL/kg</p>
                        <p><strong>Ingrediente:</strong> @produs.Ingrediente</p>
                        <p><strong>Origine:</strong> @produs.TaraOrigine</p>

                        <!-- Buton de adăugat în coș -->
                        <a href="@Url.Action("AdaugaInCos", "Home", new { produs = produs.Nume })"
                           class="btn btn-success">
                            Adaugă în coș
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
