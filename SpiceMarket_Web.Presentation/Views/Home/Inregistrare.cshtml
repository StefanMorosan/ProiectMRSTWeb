@model SpiceMarket_Web.Domain.Models.Utilizator

@{
    ViewBag.Title = "Înregistrare";
}

<h2>Înregistrare cont nou</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@using (Html.BeginForm("Inregistrare", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.NumeUtilizator, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.NumeUtilizator, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.NumeUtilizator)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Parola, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.PasswordFor(m => m.Parola, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Parola)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <button type="submit" class="btn btn-primary">Înregistrează-te</button>
            @Html.ActionLink("Anulează", "Autentificare", null, new { @class = "btn btn-default" })
        </div>
    </div>
}