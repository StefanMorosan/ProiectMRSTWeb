@{
    ViewBag.Title = "Autentificare";
}

<div class="container">
    <h2>Autentificare</h2>
    @if (ViewBag.MesajEroare != null)
    {
        <div class="alert alert-danger">@ViewBag.MesajEroare</div>
    }
    <form method="post" action="@Url.Action("Autentificare", "Home")">
        <div class="form-group">
            <label for="numeUtilizator">Nume utilizator:</label>
            <input type="text" class="form-control" id="numeUtilizator" name="numeUtilizator" />
        </div>
        <div class="form-group">
            <label for="parola">Parolă:</label>
            <input type="password" class="form-control" id="parola" name="parola" />
        </div>
        <button type="submit" class="btn btn-primary">Autentificare</button>
    </form>
</div>